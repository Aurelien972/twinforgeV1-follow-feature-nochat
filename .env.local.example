# TwinForge Local Development Environment
# Copy this to .env.local for local development
# This file shows the structure for LOCAL development only

# =============================================================================
# SUPABASE - LOCAL DEVELOPMENT
# =============================================================================
VITE_SUPABASE_URL=https://kwipydbtjagypocpvbwn.supabase.co
VITE_SUPABASE_ANON_KEY=your-local-anon-key

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
VITE_ENABLE_VOICE_COACH=true
VITE_ENABLE_3D_AVATAR=true
VITE_ENABLE_WEARABLES=true
VITE_ENABLE_STRICT_MODE=true

# =============================================================================
# LOCAL TESTING FLAGS
# =============================================================================
# Set to 'true' to enable verbose logging in development
VITE_DEBUG_MODE=false

# Set to 'true' to simulate slow network for testing
VITE_SIMULATE_SLOW_NETWORK=false
