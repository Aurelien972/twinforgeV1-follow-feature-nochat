# TwinForge - Staging Environment
# Used for Netlify deploy previews and staging deployments
# Configure these variables in Netlify dashboard for staging environment

# =============================================================================
# SUPABASE - STAGING
# =============================================================================
# Use the same Supabase project as production, but with staging data
VITE_SUPABASE_URL=https://kwipydbtjagypocpvbwn.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key

# =============================================================================
# FEATURE FLAGS - STAGING
# =============================================================================
# Enable all features in staging for pre-production testing
VITE_ENABLE_VOICE_COACH=true
VITE_ENABLE_3D_AVATAR=true
VITE_ENABLE_WEARABLES=true

# =============================================================================
# STAGING SETTINGS
# =============================================================================
# Disable StrictMode in staging for performance
VITE_ENABLE_STRICT_MODE=false

# Minimal logging in staging
VITE_DEBUG_MODE=false
