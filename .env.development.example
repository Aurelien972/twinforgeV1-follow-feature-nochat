# TwinForge - Development Environment
# Copy to .env.development for local development

# =============================================================================
# SUPABASE - DEVELOPMENT
# =============================================================================
VITE_SUPABASE_URL=https://kwipydbtjagypocpvbwn.supabase.co
VITE_SUPABASE_ANON_KEY=your-dev-anon-key

# =============================================================================
# FEATURE FLAGS - DEVELOPMENT
# =============================================================================
# Enable all features in development for testing
VITE_ENABLE_VOICE_COACH=true
VITE_ENABLE_3D_AVATAR=true
VITE_ENABLE_WEARABLES=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable React StrictMode for better error detection
VITE_ENABLE_STRICT_MODE=true

# Enable debug logging (verbose console output)
VITE_DEBUG_MODE=true

# Simulate slow network for testing (delays API calls by 1-2 seconds)
VITE_SIMULATE_SLOW_NETWORK=false
